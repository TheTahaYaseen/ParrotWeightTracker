@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<section class="login-content">
    <div class="container">
        <div class="row align-items-center justify-content-center height-self-center">
            <div class="col-lg-8">
                <div class="card auth-card">
                    <div class="card-body p-0">
                        <div class="d-flex align-items-center auth-content">
                            <div class="col-lg align-self-center">
                                <div class="px-3 py-5">
                                    <h2 class="mb-2">Register</h2>
                                    <p>Register to get connected.</p>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <hr />
                                        </div>
                                    </div>
                                    <form method="post">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="floating-label form-group">
                                                    <input asp-for="Input.Email" class="floating-input form-control pt-2 pb-1" type="email" aria-required="true">
                                                    <label asp-for="Input.Email"></label>
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="floating-label form-group">
                                                    <input asp-for="Input.Password" class="floating-input form-control pt-2 pb-1" type="password" aria-required="true">
                                                    <label asp-for="Input.Password"></label>
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <button type="submit" class="btn btn-primary"><b>Register</b></button>
                                            </div>

                                            <div class="col-12 my-2">
                                                <hr />
                                            </div>

                                            <div class="col-lg-12">
                                                <p class="fs-4">
                                                    Already Registered? <a asp-area="Identity" asp-page="/Account/Login" class="text-primary">Login Here</a>
                                                </p>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
